<h2> Записаться </h2>

<%= @thanx %>
<%= @error %>
<form action="/visit" method="POST">

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Ваше имя</label>
    <input name="client[name]" type="text" class="form-control ccc" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="напишите ваше имя" value="<%=@c.name %>" >
    </div>
    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Ваш телефон</label>
    <input name="client[phone]" type="text" class="form-control" id="bbb" aria-describedby="emailHelp"  placeholder="напишите ваш телефон" value="<%=@c.phone %>" >
    </div>
    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label" >Когда Вас ждать</label>
    <input id="aaa" name ='client[datestamp]' type="text" class="form-control" value = "<%=@c.datestamp%>" >
    </div>

     <select class="form-select ccc" name="client[barber]" aria-label="Default select example" value = "<%=@c.barber%>" >
   <option >Выберите парикмахера</option>
  

  <% @barbers.each do |item| %>
  <option <%= @barbers == item['name'] ? 'selected' : "Выберите парикмахера"%>> <%= item['name'] %></option>
    <% end%>
      
    
</select>  
</br>
<div class="mb-3">
  <br>
    <label  class="form-label">Выберите цвет краски</label>
    <select id="color" name="client[color]" value = "<%=@c.color%>">
  <option value="#7bd148">Green</option>
  <option value="#5484ed">Bold blue</option>
  <option value="#a4bdfc">Blue</option>
  <option value="#46d6db">Turquoise</option>
  <option value="#7ae7bf">Light green</option>
  <option value="#51b749">Bold green</option>
  <option value="#fbd75b">Yellow</option>
  <option value="#ffb878">Orange</option>
  <option value="#ff887c">Red</option>
  <option value="#dc2127">Bold red</option>
  <option value="#dbadff">Purple</option>
  <option value="#e1e1e1">Gray</option>
</select>
   
   


  
  
  <button type="submit" class="btn btn-primary">Записаться</button></div>
</form>
<script type="text/javascript">
$(function(){
  
  $('#color').simplecolorpicker();

  $('#aaa').datetimepicker();

});


</script>